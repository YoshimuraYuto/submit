<h2>ユーザー</h2>
<% breadcrumb :users %>
<% @users.each do |user| %>
  <% if user.name.present? %>
  <p class="link3"><%= link_to user.name, user_path(user.id) %></p>
    <% if current_user %>
      <% unless current_user.id == user.id %>
        <div class="item">
        <%= link_to 'メッセージ', conversations_path(sender_id: current_user.id, recipient_id: user.id), method: :post %>
        </div>
        <%= render "follow_form", user: user %>
      <% end %>
    <% end %>
  <% else %>
  
    <p class="link3"><%= link_to user.username, user_path(user.id) %></p>
      <% if current_user %>
        <% unless current_user.id == user.id %>
          <div class="item">
            <%= link_to 'メッセージ', conversations_path(sender_id: current_user.id, recipient_id: user.id), method: :post %>
          </div>
          <%= render "follow_form", user: user %>
        <% end %>
      <% end %>
  <% end %>
<% end %>