<h2>ユーザー</h2>
<% @users.each do |user| %>
  <% if user.name.present? %>
    <p>名前 : <%= user.name %></p>
    <% if current_user %>
      <% unless current_user.id == user.id %>
        <div class="item">
          <%= link_to 'メッセージ', conversations_path(sender_id: current_user.id, recipient_id: user.id), method: :post %>
        </div>
        <%= render "follow_form", user: user %>
      <% end %>
    <% end %>
  <% else %>
      <p>名前 : <%= user.username %></p>
      <% if current_user %>
        <% unless current_user.id == user.id %>
          <div class="item">
            <%= link_to 'メッセージ', conversations_path(sender_id: current_user.id, recipient_id: user.id), method: :post %>
          </div>
          <%= render "follow_form", user: user %>
        <% end %>
      <% end %>
  <% end %>
<% end %>